# Server
NODE_ENV=development
PORT=4000

# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_assistant

# Redis (for Bull queue; optional in dev, use in-memory fallback)
REDIS_URL=redis://localhost:6379

# Groq
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama3-70b-8192

# Embeddings: modelo local (Xenova/all-MiniLM-L6-v2), sin API key

# JWT (admin panel)
JWT_SECRET=your_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# WhatsApp session persistence (path relative to backend)
WA_SESSION_PATH=./.wwebjs_auth

# CORS (frontend origin)
CORS_ORIGIN=http://localhost:5173
